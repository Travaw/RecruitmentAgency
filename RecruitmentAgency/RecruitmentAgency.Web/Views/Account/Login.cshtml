

@model RecruitmentAgency.Web.Models.LoginModel

@{
    ViewBag.Title = "Login";
}
@{
    Layout = null;
}
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Авторизация</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.Label("Login", new { @class = "control-label" })
                @Html.EditorFor(model => Model.Login, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.Label("Password", new { @class = "control-label" })
                @Html.EditorFor(model => Model.Password, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Вход" class="btn btn-default form" />
                    @Html.ActionLink("Регистрация", "Registration","Account", null, new { @class="btn btn-default"})
                </div>
            </div>

        }
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
</body>
</html>